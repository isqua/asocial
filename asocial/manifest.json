{
  "manifest_version": 2,

  "name": "Asocial",
  "default_locale": "en",
  "description": "",
  "version": "0.0.0",

  "browser_action": {
    "default_icon": "icon-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.vk.com/*"],
      "js": ["content/vk.js"],
      "css": ["content/vk.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content/fb.js"],
      "css": ["content/fb.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["content/tw.js"],
      "css": ["content/tw.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["event/disable.js"],
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "options_page": "options/options.html"
}
